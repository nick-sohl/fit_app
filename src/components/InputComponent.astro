---
const {
  labelFor,
  label,
  inputId,
  inputType,
  inputName,
  inputPlaceholder,
  isValid,
  hasError,
  errorMessage,
} = Astro.props;
---

<!-- TODO: Client Side Error Handling and Styling -->
<div>
  <label for={labelFor} class="block text-sm/6 font-medium text-white"
    >{label}</label
  >
  <div class="mt-2 grid grid-cols-1">
    <input
      id={inputId}
      type={inputType}
      name={inputName}
      placeholder={inputPlaceholder}
      aria-invalid={isValid}
      class=`col-start-1 row-start-1 block w-full rounded-md bg-white/5 py-1.5 pr-10 pl-3 outline-1 -outline-offset-1 focus:outline-2 focus:-outline-offset-2 sm:pr-9 sm:text-sm/6 ${ hasError ? "text-red-400 outline-red-500/50 placeholder:text-red-400/70 focus:outline-red-400" : "text-white outline-white/10 placeholder:text-gray-500 focus:outline-indigo-500" }`
    />
